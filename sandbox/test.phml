<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Named Slots</title>
  <python>
    errors = [
      'To Long',
      'Invalid Format',
    ]
  </python>
  <style>
    :is(ul, ol)>li {
      list-style: none
    }
  </style>
</head>

<body>
  <!-- <Data> -->
  <!--     <p slot="bottom">Buttom</p> -->
  <!--     <p slot="top">Top</p> -->
  <!--     Middle/Catch all -->
  <!-- </Data> -->
  <ul>
    <For :each="i, error in enumerate(errors)">
        <Error id="error-{{ i }}" :message="error" style="color: blue;" />
    </For>
    <li @else>{{ for_except or 'No items in range' }}</li>
  </ul>
</body>

</html>
